    <script>
        var rowCount = 1;

        function calculateTotal() {
            // Get all rows in the table
            var rows = document.querySelectorAll('.inventory-table tr');

            // Loop through all rows (skip the first row which contains headers)
            for (var i = 1; i < rows.length; i++) {
                // Get the values entered in the Quantity and UnitPrice fields for the specific row
                var quantity = parseFloat(document.getElementById('txtQuantity' + i).value) || 0;
                var unitPrice = parseFloat(document.getElementById('txtUnitPrice' + i).value) || 0;

                // Calculate the TotalAmount for the specific row
                var totalAmount = quantity * unitPrice;

                // Display the calculated TotalAmount in the TotalAmount field for the specific row
                document.getElementById('txtTotalAmount' + i).value = totalAmount;
            }
        }
        function addRow() {
            rowCount++;
            var table = document.querySelector('.inventory-table');
            var clone = table.rows[1].cloneNode(true);

            // Clear the input values for the new row
            clone.querySelectorAll('input').forEach(function (element) {
                element.value = ''; // Clear the input values
            });

            // Update input element IDs and names to be unique
            clone.querySelectorAll('input, select').forEach(function (element) {
                var id = element.getAttribute('id');
                var name = element.getAttribute('name');
                if (id) {
                    element.setAttribute('id', id.replace('1', rowCount));
                }
                if (name) {
                    element.setAttribute('name', name.replace('1', rowCount));
                }
            });

            // Update the "Delete" button's click event
            clone.querySelector('#btnDelete').addEventListener('click', function () {
                deleteRow(this);
            });

            table.appendChild(clone);

            // Calculate the total for all rows
            calculateTotal();
        }

        function deleteRow(button) {
            var row = button.parentNode.parentNode;
            row.parentNode.removeChild(row);
        }

        function submitData() {
            // Collect and submit data to the backend here
            var formData = new FormData();
            var table = document.querySelector('.inventory-table');
            var rows = table.querySelectorAll('tr');
            rows.forEach(function (row) {
                var inputs = row.querySelectorAll('input, select');
                inputs.forEach(function (input) {
                    formData.append(input.name, input.value);
                });
            });
            var backendUrl = '@Url.Page("/Index9")';
            // Example: Sending formData to the backend via AJAX
            // Replace the URL with your backend endpoint
            fetch('your-backend-url', {
                method: 'POST',
                body: formData
            })
                .then(response => response.text())
                .then(data => {
                    console.log(data); // Handle the backend response here
                })
                .catch(error => {
                    console.error(error);
                });
        }
        
    </script>


    <script type="text/javascript">
        window.addEventListener('DOMContentLoaded', (evt) => {
