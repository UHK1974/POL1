        function showTable(selectedValue) {
            const tableIds = ['Outward', 'Inward', 'Issuance', 'Receive', 'UnclosedTransactions'];

            // Hide all tables by default
            tableIds.forEach((tableId) => {
                const table = document.getElementById(tableId);
                if (table) {
                    table.style.display = 'none';
                }
            });

            // Show the table based on the selected option
            const selectedTableId = `${selectedValue.charAt(0).toUpperCase()}${selectedValue.slice(1)}`;
            const selectedTable = document.getElementById(selectedTableId);
            if (selectedTable) {
                selectedTable.style.display = 'block';
            } else {
                return false;
            }
        }



